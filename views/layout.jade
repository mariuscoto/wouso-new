  body
    nav.top-bar(data-topbar, role='navigation', data-options="is_hover: false", data-options="dropdown_autoclose: false")
      ul.title-area
        li.name
          h1
            a(href='') wouso-new

      section.top-bar-section
        ul.right
          - if (!user)
            li.active
              a(href='/login') Login
          - else
              li.active
                a(href='/logout') Logout

              // Current role
              - var ROLE = (locals.ROLE ? locals.ROLE : user.role)

              // Display roles only for non-players
              - if (user.role < 4)
                li
                  a(href='#') ROLE:
                li.has-dropdown
                  - if (ROLE == 0)
                    a(href='#') Root
                  - if (ROLE == 1)
                    a(href='#') Admin
                  - if (ROLE == 2)
                    a(href='#') Teacher
                  - if (ROLE == 3)
                    a(href='#') Contributor
                  - if (ROLE == 4)
                    a(href='#') Player

                  // Available roles
                  ul.dropdown
                    - if (user.role == 0)
                      li
                        a(href=URL + '?role=0') Root
                    - if (user.role <= 1)
                      li
                        a(href=URL + '?role=1') Admin
                    - if (user.role <= 2)
                      li
                        a(href=URL + '?role=2') Teacher
                    - if (user.role <= 3)
                      li
                        a(href=URL + '?role=3') Contributor
                    - if (user.role <= 4)
                      li
                        a(href=URL + '?role=4') Player

        ul.left
          li
            a(href='/profile') Profile
          li
            a(href='/qotd') QOTD
          li
            a(href='/admin') Admin

    #main
      block sidebar
      block content

  block footer

  // Insert core js
  script(type="text/javascript", src='/public/js/main.js')
